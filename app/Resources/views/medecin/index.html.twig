{% extends 'base.html.twig' %}

{% block body %}
    <h1>Medecins list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Ville</th>
                <th>Département</th>
                <th>Region</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medecin in medecins %}
            <tr>
                <td>{{ medecin.name }}</td>
                <td>{{ medecin.ville.name }}</td>
                <td>{{ medecin.ville.departement.name }}</td>
                <td>{{ medecin.ville.departement.region.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('medecin_edit', { 'id': medecin.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <p>
        <a href="{{ path('medecin_new') }}" class="btn btn-primary">Créer un médecin</a>
    </p>
{% endblock %}
